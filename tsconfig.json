{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node16",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/decs.d.ts"
  ]
}
